public class Solution {
    public int hIndex(int[] citations) {
        int len = citations.length;
        int[] res = new int[len+1];
        int max = 0;
        Arrays.sort(citations);
        for(int i=0;i<len;i++){
            if(len-i>max){
                if(citations[i]>=len-i){
                    max = len-i;
                }
            }else{
                break;
            }
        }
        return max;
    }
}
